<resources>
    <!-- Base application theme. -->
    <style name="Theme.Djinni" parent="Theme.MaterialComponents.DayNight.NoActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/blue_djinni</item>
        <item name="colorPrimaryVariant">@color/purple_700</item>
        <item name="colorOnPrimary">@color/white</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/blue_djinni</item>
        <item name="colorSecondaryVariant">@color/teal_700</item>
        <item name="colorOnSecondary">@color/black</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor">?attr/colorPrimaryVariant</item>
        <!-- Fullscreen application. -->
        <item name="android:windowFullscreen">true</item>

        <item name="buttonStyle">@style/DefaultDjinniButton</item>
        <item name="radioButtonStyle">@style/DefaultDjinniRadioButton</item>
        <item name="checkboxStyle">@style/DefaultDjinniСheckBox</item>
    </style>

    <style name="Theme.Djinni.NoActionBar">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>

    <style name="DefaultDjinniButton" parent="Widget.AppCompat.Button">
        <item name="android:textSize">16sp</item>
        <item name="android:textColor">@color/white</item>
        <item name="borderRound">20dp</item>
        <item name="android:padding">10dp</item>
        <item name="android:background">@drawable/style_default_button</item>
    </style>

    <style name="DefaultDjinniRadioButton" parent="Widget.AppCompat.CompoundButton.RadioButton">
        <item name="android:textSize">14sp</item>
        <item name="colorAccent">@color/blue_djinni</item>
        <item name="android:textColorSecondary">@color/gray_djinni</item>
    </style>

    <style name="DefaultDjinniSpinner" parent="Widget.AppCompat.Spinner">
        <item name="android:textSize">16sp</item>
        <item name="android:textColor">@color/black</item>
        <item name="android:background">@color/white</item>
        <item name="android:layout_marginHorizontal">15dp</item>
        <item name="android:layout_marginTop">35dp</item>
        <item name="android:layout_marginBottom">15dp</item>
    </style>

    <style name="DefaultDjinniEditText" parent="Widget.AppCompat.EditText">
        <item name="android:textSize">16sp</item>
        <item name="android:textColor">@color/black</item>
        <item name="android:background">@color/white</item>
        <item name="android:inputType">text</item>
        <item name="android:gravity">start</item>
        <item name="android:layout_marginHorizontal">15dp</item>
        <item name="android:layout_marginTop">32dp</item>
        <item name="android:layout_marginBottom">10dp</item>
    </style>

    <style name="DefaultDjinniСheckBox" parent="Widget.AppCompat.CompoundButton.CheckBox">
        <item name="android:textSize">12sp</item>
        <item name="buttonTint">@color/blue_djinni</item>
        <item name="android:layout_marginStart">15dp</item>
    </style>

    <!--    Styles for Inbox(Offers) Fragment - start -->
    <style name="Theme.Djinni.Inbox">
        <item name="android:textViewStyle">@style/InboxTextView</item>
        <item name="editTextStyle">@style/InboxEditText</item>
    </style>

    <style name="InboxTextView" parent="Widget.AppCompat.TextView">
        <item name="android:textSize">24sp</item>
        <item name="android:textColor">@color/black</item>
    </style>

    <style name="InboxEditText" parent="Widget.AppCompat.EditText">
        <item name="android:textSize">16sp</item>
        <item name="android:textColor">@color/black</item>
        <item name="android:background">#80000000</item>
        <item name="android:gravity">top</item>
        <item name="android:padding">10dp</item>
    </style>


    <style name="InboxTabLayout" parent="TextAppearance.Design.Tab">
        <item name="android:textStyle">bold</item>
        <item name="android:textSize">14sp</item>
        <item name="textAllCaps">false</item>
    </style>

    <!--    Styles for Inbox(Offers) Fragment - end -->

    <!--    Styles for Profile Fragment - start -->
    <style name="Theme.Djinni.Profile">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
        <item name="checkboxStyle">@style/ProfileСheckBox</item>
    </style>

    <style name="ProfileTabLayout" parent="TextAppearance.Design.Tab">
        <item name="android:textStyle">bold</item>
        <item name="android:textSize">14sp</item>
        <item name="textAllCaps">false</item>
    </style>

    <style name="ProfileTextView" parent="Widget.AppCompat.TextView">
        <item name="android:textSize">24sp</item>
        <item name="android:textColor">@color/black</item>
    </style>

    <style name="ProfileEditTextField" parent="DefaultDjinniEditText">
        <item name="android:inputType">textMultiLine</item>
        <item name="android:scrollbars">vertical</item>
    </style>

    <style name="ProfileСheckBox" parent="Widget.AppCompat.CompoundButton.CheckBox">
        <item name="android:textSize">12sp</item>
        <item name="buttonTint">@color/blue_djinni</item>
        <item name="android:layout_marginStart">15dp</item>
    </style>
    <!--    Styles for Profile Fragment - end -->

    <!--    Styles for Account Fragment - start -->
    <style name="Theme.Djinni.Account">
        <item name="android:textViewStyle">@style/AccountTextView</item>
    </style>

    <style name="AccountTextView" parent="Widget.AppCompat.TextView">
        <item name="android:textSize">14sp</item>
        <item name="android:textColor">@color/black</item>
    </style>

    <style name="AccountTextViewTip" parent="Widget.AppCompat.TextView">
        <item name="android:textSize">11sp</item>
        <item name="android:textColor">@color/gray_djinni</item>
    </style>
    <!--    Styles for Account Fragment - end -->

    <!--    Styles for Subscriptions Fragment - start -->
    <style name="Theme.Djinni.Subscriptions">
        <item name="android:textViewStyle">@style/SubscriptionsTextView</item>
        <item name="checkboxStyle">@style/SubscriptionsСheckBox</item>
    </style>

    <style name="SubscriptionsTextView" parent="Widget.AppCompat.TextView">
        <item name="android:textSize">16sp</item>
        <item name="android:textColor">@color/black</item>
    </style>

    <style name="SubscriptionsСheckBox" parent="Widget.AppCompat.CompoundButton.CheckBox">
        <item name="android:textSize">12sp</item>
        <item name="buttonTint">@color/blue_djinni</item>
    </style>
    <!--    Styles for Subscriptions Fragment - end -->

    <!--    Styles for Stoplist Fragment - start -->
    <style name="Theme.Djinni.Stoplist">
        <item name="android:textViewStyle">@style/StoplistTextView</item>
        <item name="editTextStyle">@style/StoplistEditText</item>
    </style>

    <style name="StoplistTextView" parent="Widget.AppCompat.TextView">
        <item name="android:textSize">14sp</item>
        <item name="android:textColor">@color/black</item>
    </style>

    <style name="StoplistEditText" parent="Widget.AppCompat.EditText">
        <item name="android:textSize">12sp</item>
        <item name="android:textColor">@color/black</item>
        <item name="android:background">#80000000</item>
        <item name="android:gravity">top</item>
        <item name="android:padding">10dp</item>
        <item name="android:inputType">text</item>
    </style>
    <!--    Styles for Stoplist Fragment - end -->

    <style name="Theme.Djinni.AppBarOverlay" parent="ThemeOverlay.AppCompat.Dark.ActionBar" />

    <style name="Theme.Djinni.PopupOverlay" parent="ThemeOverlay.AppCompat.Light" />

    <style name="CustomViewWithTitleStyle"></style>
</resources>