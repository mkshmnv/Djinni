<resources>
    <!-- Base application theme. -->
    <style name="Theme.Djinni" parent="Theme.MaterialComponents.DayNight.NoActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/blue_main_djinni</item>
        <item name="colorPrimaryVariant">@color/purple_700</item>
        <item name="colorOnPrimary">@color/white</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/blue_djinni</item>
        <item name="colorSecondaryVariant">@color/teal_700</item>
        <item name="colorOnSecondary">@color/black</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor">?attr/colorPrimaryVariant</item>
        <!-- Fullscreen application. -->
        <item name="android:windowFullscreen">true</item>
        <!-- Customize your theme here. -->
    </style>

    <style name="Theme.Djinni.NoActionBar">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>

    <!--    Styles for PagerProfileFragment - start -->
    <style name="ProfileTabLayout" parent="TextAppearance.Design.Tab">
        <item name="android:textStyle">bold</item>
        <item name="android:textSize">14sp</item>
        <item name="textAllCaps">false</item>
    </style>
    <!--    Styles for PagerProfileFragment - end -->

    <!--    Styles for Profile Fragment - start -->
    <style name="Theme.Djinni.Profile">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>

        <item name="android:textViewStyle">@style/ProfileTextView</item>
        <item name="editTextStyle">@style/ProfileEditText</item>
        <item name="radioButtonStyle">@style/ProfileRadioButton</item>
        <item name="buttonStyle">@style/ProfileButton</item>
        <item name="spinnerStyle">@style/ProfileSpinner</item>
        <item name="checkboxStyle">@style/Profile小heckBox</item>
    </style>

    <style name="ProfileTextView" parent="Widget.AppCompat.TextView">
        <item name="android:textSize">24sp</item>
        <item name="android:textColor">@color/black</item>
    </style>

    <style name="ProfileEditText" parent="Widget.AppCompat.EditText">
        <item name="android:textSize">16sp</item>
        <item name="android:textColor">@color/black</item>
        <item name="android:background">@drawable/style_profile_edittext</item>
        <item name="android:gravity">top</item>
        <item name="android:padding">10dp</item>
    </style>

    <style name="ProfileRadioButton" parent="Widget.AppCompat.CompoundButton.RadioButton">
        <item name="android:textSize">16sp</item>
        <item name="colorAccent">@color/purple_700</item>
        <item name="android:textColorSecondary">@color/teal_700</item>
    </style>

    <style name="ProfileButton" parent="Widget.AppCompat.Button">
        <item name="android:textSize">16sp</item>
        <item name="android:textColor">@color/white</item>
        <item name="borderRound">20dp</item>
        <item name="android:padding">10dp</item>
        <item name="android:background">@drawable/style_profile_button</item>
    </style>

    <style name="ProfileSpinner" parent="Widget.AppCompat.Spinner">
        <item name="android:textSize">16sp</item>
        <item name="android:textColor">@color/black</item>
        <item name="android:background">@drawable/style_profile_edittext</item>
        <item name="android:padding">10dp</item>
    </style>

    <style name="Profile小heckBox" parent="Widget.AppCompat.CompoundButton.CheckBox">
        <item name="android:textSize">12sp</item>
        <item name="buttonTint">@color/blue_djinni</item>
    </style>
    <!--    Styles for Profile Fragment - end -->

    <!--    Styles for Account Fragment - start -->
    <style name="Theme.Djinni.Account">
        <item name="android:textViewStyle">@style/AccountTextView</item>
        <item name="editTextStyle">@style/AccountEditText</item>
        <item name="buttonStyle">@style/AccountButton</item>
    </style>

    <style name="AccountTextView" parent="Widget.AppCompat.TextView">
        <item name="android:textSize">14sp</item>
        <item name="android:textColor">@color/black</item>
    </style>

    <style name="AccountTextViewTip" parent="Widget.AppCompat.TextView">
        <item name="android:textSize">11sp</item>
        <item name="android:textColor">@color/gray_djinni</item>
    </style>

    <style name="AccountEditText" parent="Widget.AppCompat.EditText">
        <item name="android:textSize">12sp</item>
        <item name="android:background">@drawable/style_profile_edittext</item>
        <item name="android:textColor">@color/black</item>
        <item name="android:gravity">top</item>
        <item name="android:padding">10dp</item>
    </style>

    <style name="AccountButton" parent="Widget.AppCompat.Button">
        <item name="android:textSize">16sp</item>
        <item name="android:textColor">@color/white</item>
        <item name="borderRound">20dp</item>
        <item name="android:padding">10dp</item>
        <item name="android:background">@drawable/style_profile_button</item>
    </style>
    <!--    Styles for Account Fragment - end -->

    <!--    Styles for Subscriptions Fragment - start -->
    <style name="Theme.Djinni.Subscriptions">
        <item name="android:textViewStyle">@style/SubscriptionsTextView</item>
        <item name="radioButtonStyle">@style/SubscriptionsRadioButton</item>
        <item name="checkboxStyle">@style/Subscriptions小heckBox</item>
    </style>

    <style name="SubscriptionsTextView" parent="Widget.AppCompat.TextView">
        <item name="android:textSize">16sp</item>
        <item name="android:textColor">@color/black</item>
    </style>

    <style name="SubscriptionsRadioButton" parent="Widget.AppCompat.CompoundButton.RadioButton">
        <item name="android:textSize">16sp</item>
        <item name="colorAccent">@color/purple_700</item>
        <item name="android:textColorSecondary">@color/teal_700</item>
    </style>

    <style name="Subscriptions小heckBox" parent="Widget.AppCompat.CompoundButton.CheckBox">
        <item name="android:textSize">12sp</item>
        <item name="buttonTint">@color/blue_djinni</item>
    </style>
    <!--    Styles for Subscriptions Fragment - end -->

    <!--    Styles for Stoplist Fragment - start -->
    <style name="Theme.Djinni.Stoplist">
        <item name="android:textViewStyle">@style/StoplistTextView</item>
        <item name="editTextStyle">@style/StoplistEditText</item>
    </style>

    <style name="StoplistTextView" parent="Widget.AppCompat.TextView">
        <item name="android:textSize">14sp</item>
        <item name="android:textColor">@color/black</item>
    </style>

    <style name="StoplistEditText" parent="Widget.AppCompat.EditText">
        <item name="android:textSize">12sp</item>
        <item name="android:textColor">@color/black</item>
        <item name="android:background">@drawable/style_profile_edittext</item>
        <item name="android:gravity">top</item>
        <item name="android:padding">10dp</item>
        <item name="android:inputType">text</item>
    </style>
    <!--    Styles for Stoplist Fragment - end -->

    <style name="Theme.Djinni.AppBarOverlay" parent="ThemeOverlay.AppCompat.Dark.ActionBar" />

    <style name="Theme.Djinni.PopupOverlay" parent="ThemeOverlay.AppCompat.Light" />

</resources>